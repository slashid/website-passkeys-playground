---
interface Platform {
  name: string
}

export interface Props {
  platforms: Platform[]
  heading: string
}

const { platforms = [], heading } = Astro.props
---

<article class="platforms-article">
  <h3 class="platforms-heading">{heading}</h3>
  <div class="platforms-items">
    {
      platforms.map((p) => (
        <div class="platforms-item">
          <img src={`/images/gate/${p.name.toLowerCase()}.svg`} />
          <span class="platforms-item-text">{p.name}</span>
        </div>
      ))
    }
  </div>
</article>

<style>
  .platforms-article {
    padding: var(--space-24) 0;

    @media (--md) {
      padding: var(--space-88) 0;
    }
  }

  .platforms-heading {
    font-size: var(--font-size-base);
    text-align: center;
    color: var(--color-foreground);
    opacity: 0.6;
    margin: var(--space-52) 0;
  }

  .platforms-items {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    row-gap: var(--space-32);

    @media (--md) {
      justify-content: initial;
    }
  }

  .platforms-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0px;
    gap: 16px;

    width: 112px;
    height: 75px;
  }

  .platforms-item-text {
    font-style: normal;
    font-weight: 600;
    font-size: var(--font-size-base);
    color: var(--color-tertiary);
  }
</style>
