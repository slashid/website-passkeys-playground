---
export interface Props {
  src?: string
  alt?: string
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | 'xxl'
}

const { src, alt, size = 'md' } = Astro.props
---

<div class:list={['host', size]}>
  <img class="image" src={src ?? '/images/default-avatar.png'} alt={alt} />
</div>

<style>
  .host {
    border-radius: var(--radii-round);

    overflow: hidden;
    aspect-ratio: 1 / 1;

    pointer-events: none;
    user-select: none;

    /* Sizes */
    &.xs {
      width: var(--space-16px);
    }

    &.sm {
      width: var(--space-20px);
    }

    &.md {
      width: var(--space-32px);
    }

    &.lg {
      width: var(--space-44px);
    }

    &.xl {
      width: var(--space-56px);
    }

    &.xxl {
      width: var(--space-80px);
    }
  }

  .image {
    width: 100%;
    height: 100%;

    display: block;
    object-fit: cover;
  }
</style>
